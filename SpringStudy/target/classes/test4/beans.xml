<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="FileOutputter" class="test4.FileOutputter">
		<property name="filePath" value="out.txt"></property>
	</bean>
	<bean id="MessageBeanImpl" class="test4.MessageBeanImpl">
<!-- 		<constructor-arg name="name" value="홍길동"></constructor-arg> -->
		<constructor-arg value="홍길동"></constructor-arg>
		<property name="greeting" value="하이"></property>
		<property name="outputter" ref="FileOutputter"></property>
	</bean>

</beans>
